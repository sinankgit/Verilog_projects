module sequence_1010_detect(input data_in);
/* In this module we will serially take the data and checks for a pattern (1010)
	we are designing a moore machine with non overlapping */
	
	parameter s0 = 3'h0, s1 = 3'h1, s2 = 3'h2, s3 = 3'h3, s4 = 3'h4;
	reg [2:0] present_state, next_state;
	
	always @(*) begin
		case (present_state) 
			s0 : next_state = data_in?s1:s0;
			s1 : next_state = data_in?s1:s2;
			s2 : next_state = data_in?s0:s3;
			s3 : next_state = data_in?s1:s4;
			s4 : next_state = data_in?s0:s1;
			default : next_state = s0;
		endcase
	end
	
	